BINARY SEARCH BY LOOP WRITTEN BY ME-

#include <iostream>
using namespace std;
int main(){
    int n;
    cin >> n;
    vector <int> v(n);
    for(int i=0; i<n; i++){
        cin >> v[i];
    }
    int x;
    cin >> x;
    int low=0,high=n-1;
    while(high-low>=0){
        int mid = low + (high-low)/2;
        if(v[mid]<x){
            low=mid+1;
        }
        else if(v[mid]>x){
            high=mid-1;
        }
        else {
            cout << mid << "\n"; 
            return 0;
        }
    }
    cout << "Not Found\n";
    return 0;
}

BINARY SEARCH BY RECURSIVE CODE -

#include <iostream>
using namespace std;

int bin_search(vector<int> &v, int x, int low, int high) {
    if (low > high) return -1;
    int mid = low + (high - low) / 2;
    if (v[mid] == x) return mid;
    else if (v[mid] < x) return bin_search(v, x, mid + 1, high);
    else return bin_search(v, x, low, mid - 1);
}

int main() {
    int n; cin >> n;
    vector<int> v(n);
    for (int i=0; i<n; i++) cin >> v[i];
    int x; cin >> x;
    int ans = bin_search(v, x, 0, n-1);  
    if (ans != -1) cout << ans;
    else cout << "Not found";
}
